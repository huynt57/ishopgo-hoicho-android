<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPureWhite</item>
        <item name="android:textColor">@color/colorPureBlack</item>
        <item name="android:fontFamily">@font/ff_roboto</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.MoreInfo" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/ff_roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.SectionLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ff_roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPureBlack</item>
    </style>

    <style name="AppTheme.CategoryTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ff_roboto</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>

    <style name="AppTheme.DividerLine">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_line</item>
    </style>

    <style name="AppTheme.DividerFat">
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_fat</item>
    </style>

    <style name="AppTheme.Label" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">@font/ff_roboto</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.ContentLine" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">@font/ff_roboto</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.ShopInfo">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.ActionButton">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.ShopInfo.Section">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.EnableInputField" parent="AppTheme">
        <item name="android:background">@drawable/enable_input_field</item>
    </style>

    <style name="AppTheme.EnableInputField.DisableInput" parent="AppTheme">
        <item name="android:background">@drawable/enable_input_field</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AppTheme.DisableInputField" parent="AppTheme">
        <item name="android:background">@drawable/disable_input_field</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AppTheme.DisableInputField_Transparent" parent="AppTheme">
        <item name="android:background">@drawable/disable_input_field_transparent</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BottomDialog" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppTheme.SinglelineTab" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">300dp</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTheme.SinglelineTab.Text</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SinglelineTab.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
