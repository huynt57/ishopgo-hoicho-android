<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_promotion_products.xml"
            app:startDestination="@id/promotionProductsFragmentActionBar">


    <fragment
        android:id="@+id/promotionProductsFragmentActionBar"
        android:name="ishopgo.com.exhibition.ui.main.product.promotion.PromotionProductsFragmentActionBar"
        android:label="PromotionProductsFragmentActionBar">
        <action
            android:id="@+id/action_promotionProductsFragmentActionBar_to_searchPromotionProductsFragment"
            app:destination="@id/searchPromotionProductsFragment"
            app:enterAnim="@anim/nav_slide_right_to_left_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_pop_right_to_left_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_promotionProductsFragmentActionBar_to_filterProductFragment"
            app:destination="@id/filterProductFragment"
            app:enterAnim="@anim/nav_slide_right_to_left_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_pop_right_to_left_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/searchPromotionProductsFragment"
        android:name="ishopgo.com.exhibition.ui.main.product.promotion.SearchPromotionProductsFragment"
        android:label="SearchPromotionProductsFragment"/>

    <fragment
        android:id="@+id/filterProductFragment"
        android:name="ishopgo.com.exhibition.ui.filterproduct.FilterProductFragment"
        android:label="FilterProductFragment"
        />
</navigation>