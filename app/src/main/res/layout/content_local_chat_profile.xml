<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/view_cover"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/image_placeholder"/>

            <View
                android:id="@+id/textView6"
                style="@style/AppTheme.DividerLine"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/view_cover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/view_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/md_grey_200"
                app:layout_constraintBottom_toBottomOf="@+id/view_cover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_cover"
                tools:srcCompat="@drawable/avatar_placeholder"/>

            <TextView
                android:id="@+id/view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_avatar"
                tools:text="Xuan Hong Vuong"/>

            <TextView
                android:id="@+id/view_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:autoLink="phone"
                android:lineSpacingMultiplier="1.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25"
                tools:text="info"/>

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="Bạn bè"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_group_default_24dp"
                app:layout_constraintEnd_toStartOf="@+id/view_message"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24"/>

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="Nhắn tin"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_comment_highlight_24dp"
                app:layout_constraintEnd_toStartOf="@id/view_call"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView24"/>

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="Gọi điện"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_phone_highlight_24dp"
                app:layout_constraintEnd_toStartOf="@id/view_setting"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view_message"
                app:layout_constraintTop_toBottomOf="@+id/textView24"/>

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="Thiết lập"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_setting_highlight_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view_call"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                tools:visibility="visible"/>

            <View
                android:id="@+id/textView24"
                style="@style/AppTheme.DividerLine"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_name"/>

            <View
                android:id="@+id/textView25"
                style="@style/AppTheme.DividerLine"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22"/>
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_blue_grey_100"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Danh sách các bài đã đăng"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_introduction"
            tools:ignore="HardcodedText"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <ishopgo.com.exhibition.ui.widget.GridRecyclerView
            android:id="@+id/view_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/item_spacing"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

            <include
                android:id="@+id/view_empty_layout"
                layout="@layout/empty_list_result"/>

        </FrameLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>