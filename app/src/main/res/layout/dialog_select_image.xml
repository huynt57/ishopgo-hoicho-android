<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
        android:id="@+id/tv_choose_takePhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_black"
        android:drawablePadding="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        android:text="Chụp ảnh mới"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_photo_camera_highlight_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
        android:id="@+id/tv_choose_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_black"
        android:drawablePadding="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        android:text="Chọn ảnh từ bộ sưu tập"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_gallery_highlight_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_takePhoto" />

</android.support.constraint.ConstraintLayout>