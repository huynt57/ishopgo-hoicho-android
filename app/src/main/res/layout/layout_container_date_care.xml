<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    >

    <TextView
        style="@style/AppTheme.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Lịch hẹn"
        android:textColor="@color/md_white_1000"
        />

    <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
        android:id="@+id/member_lich_chamsoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:ellipsize="end"

        android:gravity="end"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_edit_white_18dp"
        tools:drawableEnd="@drawable/ic_edit_white_18dp"
        tools:text="20/10/2018 09:00"/>

</LinearLayout>