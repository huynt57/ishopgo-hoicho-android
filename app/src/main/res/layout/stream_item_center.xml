<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="horizontal"
                                             tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/center_textContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:autoLink="phone|email|web"
        android:fontFamily="@font/ff_roboto"
        android:gravity="center"
        android:textStyle="italic"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/colorSecondaryText"
        android:textColorLink="#212121"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Thành viên ABC đã rời khỏi nhóm"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/center_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:textColor="@color/colorSecondaryText"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center_textContent"
        tools:text="12:00"
        tools:ignore="SmallSp"/>

</android.support.constraint.ConstraintLayout>