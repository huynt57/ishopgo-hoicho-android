<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ishopgo.com.exhibition.ui.widget.SimpleBottomSheetItem
        android:id="@+id/option_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_edit_highlight_24dp"
        app:text="Sửa" />

    <ishopgo.com.exhibition.ui.widget.SimpleBottomSheetItem
        android:id="@+id/option_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_delete_default_24dp"
        app:text="Xoá" />

    <ishopgo.com.exhibition.ui.widget.SimpleBottomSheetItem
        android:id="@+id/option_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_close_default_24dp"
        app:text="Huỷ bỏ" />

</LinearLayout>