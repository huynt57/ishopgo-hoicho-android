<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingTop="8dp">

    <ishopgo.com.exhibition.ui.widget.SimpleBottomSheetItem
        android:id="@+id/option_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_success_default_24dp"
        app:text="Nâng cấp lên gian hàng"
        />

    <ishopgo.com.exhibition.ui.widget.SimpleBottomSheetItem
        android:id="@+id/option_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_delete_default_24dp"
        app:text="Xóa"
        />

    <View
        android:layout_width="match_parent"
        style="@style/AppTheme.DividerLine"
        android:layout_height="5dp"
        android:background="@color/md_grey_300"
        />

    <ishopgo.com.exhibition.ui.widget.SimpleBottomSheetItem
        android:id="@+id/option_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_cancel_default_24dp"
        app:text="Hủy"
        />

</LinearLayout>