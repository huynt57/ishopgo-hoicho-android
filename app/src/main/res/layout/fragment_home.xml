<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/view_frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nestedScroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/container_banner"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/view_banner_pager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <me.relex.circleindicator.CircleIndicator
                                android:id="@+id/view_banner_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="16dp"
                                android:minWidth="20dp"
                                app:ci_drawable="@drawable/view_pager_indicator_selected"
                                app:ci_drawable_unselected="@drawable/view_pager_indicator_unselected" />

                        </FrameLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_category_stage1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_category_stage1"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Danh mục"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ishopgo.com.exhibition.ui.widget.GridRecyclerView
                                android:id="@+id/view_list_category_stage1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_category_stage1" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_highlight_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_highlight_brand"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhà tài trợ"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_highlight_brand"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ishopgo.com.exhibition.ui.widget.GridRecyclerView
                                android:id="@+id/view_list_highlight_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_highlight_brand" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_expo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_expo"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hội chợ mới nhất"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_expo"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tất cả"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ishopgo.com.exhibition.ui.widget.GridRecyclerView
                                android:id="@+id/view_list_expo_fair"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_expo" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_highlight_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_highlight_products"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm nổi bật"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_highlight_products"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ishopgo.com.exhibition.ui.widget.GridRecyclerView
                                android:id="@+id/view_list_highlight_products"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_highlight_products" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_favorite_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_favorite_products"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm yêu thích"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_favorite_products"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/view_list_favorite_products"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_favorite_products" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_promotion_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_promotion_products"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm khuyến mãi"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_promotion_products"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/view_list_promotion_products"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_promotion_products" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_viewed_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_viewed_products"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm đã xem"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_viewed_products"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/view_list_viewed_products"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_viewed_products" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_newest_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="gone">

                            <TextView
                                android:id="@+id/label_newest_products"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm mới nhất"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_newest_products"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/view_list_newest_products"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_newest_products" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_latest_news"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_banner"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/label_latest_news"
                                style="@style/AppTheme.SectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tin tức mới nhất"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/more_latest_news"
                                style="@style/AppTheme.MoreInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xem thêm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/view_list_latest_news"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:padding="@dimen/item_spacing"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/label_latest_news" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_latest_news">

                            <ImageView
                                android:id="@+id/view_registered"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/image_registered"
                                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                                app:layout_constraintStart_toStartOf="@+id/guideline5"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/view_company_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:lineSpacingMultiplier="1.3"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/view_registered"
                                tools:text="company_info" />

                            <android.support.constraint.Guideline
                                android:id="@+id/guideline5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.25" />

                            <android.support.constraint.Guideline
                                android:id="@+id/guideline6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.75" />

                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constrain_moGianHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_moGianHang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline17"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    tools:ignore="MissingConstraints">

                    <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="MỞ GIAN HÀNG"
                        android:textColor="@color/md_white_1000"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.constraint.Guideline
                    android:id="@+id/guideline13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/drawer_main"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPureWhite"
        android:fitsSystemWindows="true"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/logo_expo_horizontal" />

            <View
                style="@style/AppTheme.DividerLine"
                android:layout_width="match_parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Thông tin hội chợ"
                android:textAllCaps="true"
                android:textColor="@color/colorPureWhite" />

            <View
                style="@style/AppTheme.DividerLine"
                android:layout_width="match_parent" />

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_open_introduce"
                style="@style/AppTheme.CategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Giới thiệu"
                app:drawableStartCompat="@drawable/ic_introduce_24dp"
                app:drawableStartSquareSize="24dp" />

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_open_news"
                style="@style/AppTheme.CategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Tin tức"
                app:drawableStartCompat="@drawable/newspaper"
                app:drawableStartSquareSize="24dp" />

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_open_quesions"
                style="@style/AppTheme.CategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Hỏi đáp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/question"
                app:drawableStartSquareSize="24dp" />

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_open_commons"
                style="@style/AppTheme.CategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Thông tin chung"
                app:drawableStartCompat="@drawable/info"
                app:drawableStartSquareSize="24dp" />

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/view_open_expo_map"
                style="@style/AppTheme.CategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Lịch sự kiện"
                app:drawableStartCompat="@drawable/ic_expo_map_24dp"
                app:drawableStartSquareSize="24dp" />

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
