<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_name"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tên: " />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_phone"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            tools:text="SDT: " />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_product_count"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="So san pham" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_joined_date"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ngay tham gia" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_region"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Khu vuc" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_rating"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Danh gia shop" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_click_count"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="luot click" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_share_count"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="luot chia se " />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_follow_count"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="luot quan tam" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_visit_count"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="luot tham quan" />

        <View
            android:id="@+id/textView10"
            style="@style/AppTheme.DividerLine"
            android:layout_width="match_parent" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/textView11"
            style="@style/AppTheme.ShopInfo.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_300"
            android:text="Mô tả" />

        <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
            android:id="@+id/view_description"
            style="@style/AppTheme.ShopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Công ty mỹ phẩm hàng đầu Việt Nam" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ishopgo.com.exhibition.ui.widget.VectorSupportTextView
                android:id="@+id/textView15"
                style="@style/AppTheme.ShopInfo.Section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_grey_300"
                android:text="Điểm bán"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_add_sale_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@color/md_grey_300"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_add_highlight_24dp"
                android:visibility="gone"/>
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="@dimen/item_spacing"
            tools:listitem="@layout/item_sale_point" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>