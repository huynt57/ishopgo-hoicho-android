                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="8dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_product_chucNangDV4"
                        style="@style/AppTheme.EnableInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chức năng của đơn vị"
                        tools:drawableEnd="@drawable/ic_arrow_drop_down_default_24dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_add_donVi5"
                    style="@style/AppTheme.ActionButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="0dp"
                    android:text="THÊM ĐƠN VỊ"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
